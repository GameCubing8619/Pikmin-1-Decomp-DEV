{
    "[c]": {
        "files.encoding": "utf8",
        "editor.defaultFormatter": "ms-vscode.cpptools"
    },
    "[cpp]": {
        "files.encoding": "utf8",
        "editor.defaultFormatter": "ms-vscode.cpptools"
    },
    "editor.tabSize": 4,
    "files.exclude": {
        "**/*.ctx": true
    },
    "files.associations": {
        "*.c.ctx": "c",
        "*.ctx": "cpp",
        "source_location": "cpp",
        "*.cp": "cpp",
        "__mem.h": "c",
        "db.h": "c",
        "math.h": "c"
    }
}
