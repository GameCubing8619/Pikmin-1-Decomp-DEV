{
    "[c]": {
        "files.encoding": "utf8",
        "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd"
    },
    "[cpp]": {
        "files.encoding": "utf8",
        "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd"
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    "editor.tabSize": 4,
    "files.exclude": {
        "**/*.ctx": true
    },
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.associations": {
        ".clangd": "yaml",
        "*.c.ctx": "c",
        "*.ctx": "cpp",
        "*.cp": "cpp",
        "__mem.h": "c",
        "db.h": "c",
        "math.h": "c",
        "dvd.h": "c",
        "math_api.h": "c",
        "types.h": "c",
        "math_ppc.h": "c",
        "pikidemo.h": "c",
        "mtx.h": "c",
        "aictrl.h": "c",
        "dspbuf.h": "c",
        "rate.h": "c",
        "hw_regs.h": "c",
        "pikibgm.h": "c"
    },
    // Disable C/C++ IntelliSense, use clangd instead
    "C_Cpp.intelliSenseEngine": "disabled",
}
